<div class="modal" role="dialog">
    <div class="modal-content">
        <span class="close">x</span>
        {{#if id}}
            <h3>{{title}}</h3>
        {{else}}
            <h3>New task</h3>
        {{/if}}
        <form id="todo-form" class="addFormLayout" data-id="{{id}}">
            <div class="field-item">
                <div class="label">
                    <label for="title" id="title-">Titel</label>
                </div>
                <div class="value">
                    <input value="{{title}}" id="title" name="title" type="text" maxlength="70" required>
                </div>
            </div>
            <div class="field-item">
                <div class="label">
                    <label for="desc">Description</label>
                </div>
                <div class="value">
                    <textarea  id="desc" name="desc" rows="7" required>{{description}}</textarea>
                </div>
            </div>
            <div class="field-item">
                <div class="label">
                    <label>Priority</label>
                </div>
                <div class="value">
                    <div class="prio">
                        <input type="radio" id="prio-6" name="priority" value="6" {{#ifCond 6 priority}}checked{{/ifCond}}>
                        <label tabindex="0" for="prio-6"></label>
                        <input type="radio" id="prio-5" name="priority" value="5" {{#ifCond 5 priority}}checked{{/ifCond}}>
                        <label tabindex="0" for="prio-5"></label>
                        <input type="radio" id="prio-4" name="priority" value="4" {{#ifCond 4 priority}}checked{{/ifCond}}>
                        <label tabindex="0" for="prio-4"></label>
                        <input type="radio" id="prio-3" name="priority" value="3" {{#ifCond 3 priority}}checked{{/ifCond}}>
                        <label tabindex="0" for="prio-3"></label>
                        <input type="radio" id="prio-2" name="priority" value="2" {{#ifCond 2 priority}}checked{{/ifCond}}>
                        <label tabindex="0" for="prio-2"></label>
                        <input type="radio" id="prio-1" name="priority" value="1" {{#ifCond 1 priority}}checked{{/ifCond}}>
                        <label tabindex="0" for="prio-1"></label>
                    </div>
                </div>
            </div>
            <div class="field-item">
                <div class="label">
                    <label for="duedate">Complete till:</label>
                </div>
                <div class="value">
                    <input value="{{#if id}}{{prettifyDate dueDate}}{{/if}}" id="duedate" name="duedate" type="date" required>
                </div>
            </div>
            <div class="field-item actions">
                <div> <!--IE Fix -->
                    <div class="value">
                        <button type="submit">Save</button>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>