<div role="listitem" class="listitem">
    <div class="date">
        <div class="duedate">{{dueDateAsString}}</div>
        <div class="status {{#if finished}}finished{{else}}pending{{/if}}">
            <span class="status-icon {{#if finished}}ion-ios-checkmark{{else}}ion-ios-circle-outline{{/if}}"></span><span
                class="status-text">Finished</span>
        </div>
    </div>
    <div class="todo">
        <div class="title">{{title}}
            {{#times priority}}
            <span class="ion-ios-bolt"></span>
            {{/times}}
        </div>
        <div class="desc">{{description}}</div>
    </div>
    <div class="actions">
        <button>Edit</button>
    </div>
</div>